{
  "extends": [
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "prefer-const": "off",
    "react-hooks/exhaustive-deps": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "public/",
    "*.config.js",
    "*.config.ts"
  ]
}
